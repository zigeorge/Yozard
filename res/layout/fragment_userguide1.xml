<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DB6AC"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <ImageView 
            android:id="@+id/ivStepImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/user_guide_date"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00AB6D"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/dim5"
            android:paddingLeft="@dimen/dim10"
            android:paddingRight="@dimen/dim10"
            android:paddingTop="@dimen/dim5"
            android:text="3 STEPS TO"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvSaveIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStep"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim5"
            android:background="#00AB6D"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/dim5"
            android:paddingLeft="@dimen/dim10"
            android:paddingRight="@dimen/dim10"
            android:paddingTop="@dimen/dim5"
            android:text="SAVE IN"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSaveIn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim5"
            android:background="#00AB6D"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/dim5"
            android:paddingLeft="@dimen/dim10"
            android:paddingRight="@dimen/dim10"
            android:paddingTop="@dimen/dim5"
            android:text="RESTAURANTS"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <!--  -->

</LinearLayout>