<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/border_orange_light_bg_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange1"
            android:paddingBottom="@dimen/dim5"
            android:paddingLeft="@dimen/dim10"
            android:paddingTop="@dimen/dim5"
            android:drawableLeft="@drawable/ic_action_logo"
            android:drawablePadding="@dimen/dim5"
            android:gravity="center_vertical"
            android:text="SIGN OUT!!"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dim10"
            android:text="Press YES to confirm signout and no to stay."
            android:textColor="@color/dkgray"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim40"
            android:layout_marginTop="@dimen/dim10"
            android:orientation="horizontal" >
            
            <TextView 
                android:id="@+id/tvYes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange_light"
                android:gravity="center"
                android:text="YES"
                android:textSize="16sp"
                android:textColor="@drawable/white_text_color_selector"/>
            <View 
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <TextView 
                android:id="@+id/tvNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange_light"
                android:gravity="center"
                android:text="NO"
                android:textSize="16sp"
                android:textColor="@drawable/white_text_color_selector"/>
            
        </LinearLayout>

</LinearLayout>